<div class="post-container">
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}" class="text-dark">{{post.title}}</a></h4>
      </div>
      <p>{{post.content}}</p>
    </div>
</div>
<div >
    <h5>by {{post.user.username}}</h5>
    <h6>on {{format_date post.date_created}}</h6>
</div>

<script src="/js/post.js"></script>
