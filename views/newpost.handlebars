

<div class="row mt-4 flex-row justify-center">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

          <form
        class="flex-row justify-center justify-space-between-md align-center"
        id="tip-form"
      >
       <div class="col-12 col-lg-9">
          <input
            name="post-title"
            id="post-title"
            placeholder="title"
            value=""
            class="form-input w-100"
          />
        </div>
        <div class="col-12">
          <textarea
            name="post-content"
            id="post-content"
            placeholder="Content"
            value=""
            class="form-input w-100"
          ></textarea>
        </div>
       
        <div class="col-12 col-lg-3">
          <button class="btn btn-primary btn-block py-3" type="submit">
            Create Post
          </button>
        </div>
      </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}" class="text-dark">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/post.js"></script>
